<UserControl x:Class="ChapeauUI.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChapeauUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="67">
    <UserControl.Resources>
        <BitmapImage x:Key="Logo" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="/ChapeauUI;component/Resources/Briefing-Menu-Chapeau(1)@3x.png"/>
    </UserControl.Resources>
    <Grid Height="67" Background="White">
        <Image HorizontalAlignment="Left" Height="47" Margin="16,10,0,0" VerticalAlignment="Top" Width="81" Source="{StaticResource Logo}"/>
        <Button Content="LOGOUT" HorizontalAlignment="Right" Margin="0,6,16,0" VerticalAlignment="Top" Background="#FFE7DAFF" Foreground="#FF45414D" BorderBrush="#FFE7DAFF" Padding="16,12,16,9" FontWeight="Bold" FontSize="24" Click="Button_Click"/>

    </Grid>
</UserControl>
